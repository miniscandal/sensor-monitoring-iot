{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,
        /* Preact Config */
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "skipLibCheck": true,
        "paths": {
            "react": [
                "./node_modules/preact/compat/"
            ],
            "react-dom": [
                "./node_modules/preact/compat/"
            ],
            "@core-services/*": [
                "./src/core/services/*"
            ],
            "@assets/*": [
                "./src/assets/*"
            ],
            "@mocks/*": [
                "./src/mocks/*"
            ],
            "@shared-components/*": [
                "./src/shared/components/*"
            ],
            "@shared-constants/*": [
                "./src/shared/constants/*"
            ],
            "@shared-contexts/*": [
                "./src/shared/contexts/*"
            ],
            "@shared-hooks/*": [
                "./src/shared/hooks/*"
            ],
        },
        "strictNullChecks": true,
    },
    "include": [
        "node_modules/vite/client.d.ts",
        "**/*"
    ]
}
